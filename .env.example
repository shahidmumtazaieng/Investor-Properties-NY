# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Session Configuration (Required)
SESSION_SECRET=your_very_secure_random_session_secret_at_least_64_characters_long

# Email Configuration (Optional - for email notifications)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# SMS Configuration (Optional - for phone verification)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Google Sheets Integration (Optional - for live property data)
GOOGLE_CLIENT_EMAIL=your_google_service_account_email
GOOGLE_PRIVATE_KEY=your_google_service_account_private_key
GOOGLE_SHEETS_ID=your_google_sheets_id

# PayPal Configuration (Optional - for payment processing)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Database Configuration for Supabase
# Copy this file to .env and update with your actual Supabase credentials

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_DATABASE_URL=postgresql://your_db_url

# Alternative: Use single DATABASE_URL for Drizzle
DATABASE_URL=postgresql://your_complete_database_url

# Server Configuration
NODE_ENV=development
PORT=3002
SESSION_SECRET=your_session_secret_key_change_in_production

# Frontend URL for CORS
CLIENT_URL=http://localhost:3000

# Email Service (Optional - for verification emails)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# SMS Service (Optional - for phone verification)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
